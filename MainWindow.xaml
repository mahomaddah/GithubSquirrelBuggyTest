<Window x:Class="GithubSquirrelBuggyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GithubSquirrelBuggyTest"
        mc:Ignorable="d"
        
        Background="Crimson"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Width="200">

            <Label Foreground="White" Margin="10" Content="Buggy 's Current Version"  HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Name="TBversion" Margin="10" HorizontalContentAlignment="Center" Height="23" TextWrapping="Wrap" Text="1.0.0" VerticalAlignment="Top"/>
            <Button Margin="10" Content="Update" Name="UpdateBtn"  VerticalAlignment="Top" Click="UpdateBtn_Click"/>
            <Button Margin="10" Content="Check" Name="CheckBtn"  VerticalAlignment="Top" Click="CheckBtn_Click"/>

        </StackPanel>
    </Grid>
</Window>
